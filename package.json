{
  "name": "@ntedgi/nestjs-status-monitor",
  "version": "1.0.5",
  "description": "Realtime Monitoring for Express-based NestJS applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntedgi/nestjs-status-monitor.git"
  },
  "author": "ntedgi",
  "license": "MIT",
  "keywords": [
    "nestjs",
    "status",
    "monitoring",
    "node"
  ],
  "devDependencies": {
    "@nestjs/common": "^9.4.3",
    "@nestjs/core": "^9.4.3",
    "@nestjs/platform-express": "^9.4.3",
    "@nestjs/platform-socket.io": "^9.4.3",
    "@nestjs/testing": "^9.4.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^20.5.6",
    "@types/supertest": "^2.0.10",
    "coveralls": "^3.1.0",
    "jest": "^26.6.3",
    "nestjs-config": "^1.4.7",
    "prettier": "^2.2.1",
    "socket.io-client": "^4.1.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@nestjs/websockets": "^9.4.3",
    "axios": "^0.27.2",
    "handlebars": "4.7.7",
    "on-headers": "^1.0.2",
    "pidusage": "^3.0.0",
    "socket.io": "^4.1.1",
    "event-loop-stats": "^1.3.0"
  },
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "coveralls": "npm run coverage --coverageReporters=text-lcov | coveralls",
    "test:watch": "jest --watch",
    "start:dev": "tsc --watch --declaration",
    "build": "rm -rf ./dist && tsc",
    "format": "prettier src/**/*.ts --ignore-path ./.prettierignore",
    "prepare": "npm run format && npm run build",
    "heroku-postbuild": "npm run build && cd ./examples/integrate-status-monitor && npm ci && npm run build"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "bugs": {
    "url": "https://github.com/ntedgi/nestjs-status-monitor/issues"
  },
  "homepage": "https://github.com/ntedgi/nestjs-status-monitor#readme",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "optionalDependencies": {
    "event-loop-stats": "^1.3.0"
  }
}
